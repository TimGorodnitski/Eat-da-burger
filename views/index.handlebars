<h1>Here's the Menu</h1>

<h2>Burgers ready to eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{name}}

        <button class="change-devoured" data-id="{{id}}" data-newdevoured="false">
            DEVOUR!
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers you can order</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
        <li>
        {{name}}

        <button class="change-devoured" data-id="{{id}}" data-newdevoured="true">
            ORDER ANOTHER
        </button>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newburg">Burger Name:</label>
        <input type="text" id="newburg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>